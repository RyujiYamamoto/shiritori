<h1><%= @room.name %></h1>
<div id='messages', data-room_id="<%= @room.id %>">
  <% @messages.each do |message| %>
    <div><%= "#{message.user_name}: #{message.body}" %></div>
  <% end %>
</div>
<div class="input">
  <form>
    <label>しりとる</label>
    <input type="text" data-behavior="room_speaker">
  </form>
</div>
