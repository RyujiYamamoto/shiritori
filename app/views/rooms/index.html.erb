<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Host User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= User.find_by(id: room.host_user_id).name %></td>
        <td><%= link_to 'ここでしりとる', room %></td>
        <td><%= link_to 'へんしゅう', edit_room_path(room) %></td>
        <td><%= link_to 'へやをけす', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

