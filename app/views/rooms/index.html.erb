<p id="notice"><%= notice %></p>

<h1>ルーム一覧</h1>

<table>
  <thead>
    <tr>
      <th>ルーム名</th>
      <th>作成しりとりスト</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= User.find_by(id: room.host_user_id).name %></td>
        <td><%= link_to 'ここでしりとる', room %></td>
        <td><%= link_to 'へんしゅう', edit_room_path(room) %></td>
        <td><%= link_to 'へやをけす', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'ルーム作成', new_room_path %>
<%= link_to 'マイページに戻る', user_url(current_user.id) %>

